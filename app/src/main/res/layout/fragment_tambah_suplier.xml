<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".TambahSuplierFragment">


    <Button
        android:layout_width="30dp"
        android:scrollbars="none"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/btn_back_suplier"
        android:background="@drawable/baseline_keyboard_backspace_24" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tambah Suplier"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    android:textSize="24sp"
                    android:layout_gravity="center"
                    android:id="@+id/labelSuplier"
                    android:layout_marginBottom="15dp"
                    android:textColor="@color/red" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:padding="20dp"
                    android:text="Nama Suplier : "
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:textSize="18sp"
                    android:textColor="@color/red"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-30dp"
                    android:background="@null"
                    android:padding="20dp"
                    android:hint="Masukan Nama"
                    android:layout_gravity="center"
                    android:id="@+id/namaSuplier"
                    android:textSize="15sp"
                    android:textColor="@color/black"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:alpha="0.5"
                    android:background="@color/red"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:text="No_Telpon :"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:textSize="18sp"
                    android:textColor="@color/red"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-30dp"
                    android:hint="Masukan No.telpon"
                    android:inputType="number"
                    android:padding="20dp"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:id="@+id/notlpSuplier"
                    android:textSize="15sp"
                    android:textColor="@color/black"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_marginTop="0dp"
                    android:layout_height="1dp"
                    android:alpha="0.5"
                    android:background="@color/red"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:text="Email : "
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:textSize="18sp"
                    android:textColor="@color/red"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:layout_marginTop="-30dp"
                    android:padding="20dp"
                    android:hint="Masukan Email"
                    android:layout_gravity="center"
                    android:id="@+id/emailSuplier"
                    android:textSize="15sp"
                    android:textColor="@color/black"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_marginTop="0dp"
                    android:layout_height="1dp"
                    android:alpha="0.5"
                    android:background="@color/red"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:text="Alamat : "
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:textSize="18sp"
                    android:textColor="@color/red"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:layout_marginTop="-30dp"
                    android:padding="20dp"
                    android:hint="Masukan Alamat"
                    android:layout_gravity="center"
                    android:id="@+id/alamatSuplier"
                    android:textSize="15sp"
                    android:textColor="@color/black"/>
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="1dp"
                    android:alpha="0.5"
                    android:background="@color/red"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Simpan Data"
                    android:layout_gravity="center"
                    app:cornerRadius="20dp"
                    android:id="@+id/btn_submit_suplier"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </ScrollView>

</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="2dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="8dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:scaleType="fitXY"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:paddingLeft="5dp"
            android:id="@+id/view_image_product"
            android:src="@drawable/ic_launcher_background"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/view_image_product"
            android:text="@string/app_name"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/txt_name_product"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stock :  "
            android:layout_toRightOf="@id/view_image_product"
            android:layout_below="@+id/txt_name_product"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="9dp"
            android:textSize="12sp"
            android:id="@+id/txt_label_stock"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="112"
            android:layout_toRightOf="@id/view_image_product"
            android:layout_below="@+id/txt_name_product"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="9dp"
            android:textSize="12sp"
            android:id="@+id/txt_stock_product"/>

        <Button
            android:id="@+id/btn_atur_stock"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-87dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@id/txt_name_product"
            android:text="Atur Stock"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textSize="9sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/view_image_product"
            android:layout_below="@+id/txt_name_product"
            android:layout_marginRight="60dp"
            android:layout_marginTop="9dp"
            android:textSize="12sp"
            android:id="@+id/txt_harga_product"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/view_image_product"
            android:layout_below="@+id/txt_name_product"
            android:layout_marginRight="60dp"
            android:layout_marginTop="9dp"
            android:textSize="12sp"
            android:id="@+id/txt_harga_jual"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/view_image_product"
            android:layout_below="@+id/txt_name_product"
            android:layout_marginRight="60dp"
            android:layout_marginTop="9dp"
            android:textSize="12sp"
            android:id="@+id/txt_desc_product"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>